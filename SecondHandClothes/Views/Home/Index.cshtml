@model IndexViewModel

@{
    ViewData["Title"] = "Начална страница";
}

<head>
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet" />
</head>

@if (!this.User.Identity.IsAuthenticated)
{
<body>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 mh-100" style="height:600px" src="https://i.ytimg.com/vi/rg-BIR12IOM/maxresdefault.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block align-text-top">

                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" style="height:600px" src="https://mpulse.bg/wp-content/uploads/2021/04/articles6-scaled.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" style="height:600px" src="https://wallpaperaccess.com/full/2489626.jpg" alt="Third slide">
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="jumbotron jumbotron-fluid text-center">
        <div class="container">
            <h1 class="display-4 font-weight-bold">SecondHandClothes</h1>
            <h4> Приложението чрез което е по възможно от всякога лесно и достъпно да окрасите своят гардероб с добро качество дрехи втора употреба и в същото време да се отървете от вече омръзнали на вас дрехи като станете продавач и съответно ги качите на уебсайта!</h4>
            <hr />
            <h3>Побързай и започни да пазаруваш и продаваш като се регистрираш сега!</h3>
            <p class="lead mt-3">
                <a class="nav-link text-light font-weight-bold btn btn-outline-dark btn-dark" asp-area="Identity" asp-page="/Account/Register">Регистрирай се</a>
            </p>
            <h3>Вече имаш акаунт?</h3>
            <p class="lead mt-3">
                <a class="nav-link text-light font-weight-bold btn btn-outline-dark btn-dark" asp-area="Identity" asp-page="/Account/Login">Вход</a>
            </p>
        </div>
    </div>
    <hr />
    <div class="mt-3">
        <h2 class="text-center bg-white">-Ето и някои от последно добавените продукти-</h2>
        <hr class="my-4 mb-5">
    </div>

    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <img class="card-img-top img-responsive" style="height:600px" src="@product.ImageUrl" alt="@product.Category - @product.Brand">
                    <div class="card-body text-center">
                        <h5 class="card-title text-center">@product.Title</h5>
                        <h5 class="card-title text=center">@product.Price лв.</h5>
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary">Виж повече</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="jumbotron jumbotron-fluid text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h3>Потребители : @Model.TotalCustomers</h3>
                </div>
                <div class="col-md-4">
                    <h3>Продавачи : @Model.TotalSellers</h3>
                </div>
                <div class="col-md-4">
                    <h3>Продукти : @Model.TotalProducts</h3>
                </div>
            </div>
        </div>
    </div>
</body>
}
