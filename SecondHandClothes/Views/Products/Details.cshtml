@model SecondHandClothes.Services.Products.Models.ProductDetailsServiceModel



    <html lang="en">
        <head>

            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
            <link href="~/css/site.css" rel="stylesheet" />
            <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
            <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
        </head>

    <body>
        <div class="container">
            <div class="card">
                <div class="container-fliud">
                    <div class="wrapper row">
                        <div class="preview col-md-6">

                            <div class="preview-pic tab-content">
                                <div class="tab-pane active" id="pic-1"><img src="@Model.ImageUrl" /></div>
                            </div>  
                        </div>
                        <div class="details col-md-6">
                            <h3 class="product-title">@Model.Title</h3>

                            <h5 class="sizes price">
                                Категория:
                                <span title="@Model.Category">  @Model.Category</span>
                            </h5>
                            <h5 class="sizes price">
                                Състояние:
                                <span title="@Model.Condition">  @Model.Condition</span>
                            </h5>
                            <h5 class="sizes price">
                                Пол:
                                <span title="@Model.Sex">  @Model.Sex</span>
                            </h5>
                            <h5 class="sizes price">
                                Бранд:
                                <span title="@Model.Brand">  @Model.Brand</span>
                            </h5>
                            <h5 class="sizes price">
                                Размер:
                                <span title="@Model.Size">  @Model.Size</span>
                            </h5>
                            <h5 class="colors price">
                                Цвят:
                                <span>@Model.Colour</span>
                            </h5>
                            <h5 class="sizes">
                                Описание:
                            </h5>
                            <p class="product-description">@Model.Description</p>
                            <h4 class="price mt-3">Цена: <span>@Model.Price лв</span></h4>
                            @if (this.User.Id() == Model.UserId)
                            {
                                <h4 class="text-center">Този продукт е добавен от вас!</h4>
                                <a asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning ml-2 mr-2">Редактирай</a>
                            }

                            @if (this.User.Id() != Model.UserId && !this.User.IsAdmin())
                            {
                                <div class="action">
                                    <a class="btn btn-danger" asp-controller="Cart" asp-action="AddToCart" asp-route-productId=@Model.Id asp-route-userId=@User.Id()>
                                        <i class="fas fa-shopping-cart">  Добави в количката</i>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
