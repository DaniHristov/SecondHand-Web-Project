@model IEnumerable<ProductServiceModel>

@{
    ViewData["Title"] = "Моите продукти";
    ViewBag.IsEditAllowed = true;
    ViewBag.ButtonText = "Виж";
}

<link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet" />

@if (!Model.Any())
{
<div class="text-center">
    <hr />
    <h1 class="text-center">Все още нямате добавени продукти!</h1>
    <a class="btn btn-primary mt-3" role="button" asp-controller="Products" asp-action="Add">Добави продукт!</a>
    <hr />
</div>
}

<partial name="_ProductsPartial" model="@Model" />